<%- include('./includes/head.ejs') %>
</head>
<body class="h-100">
    <%- include('./includes/navigation.ejs') %>

    <!-- Body -->

    <h1 class="text-center">Thông tin làm việc</h1>
    <div class="container">
      <div class="card my-3">
        <div class="card-header">
          Lựa chọn các chức năng sau:
        </div>
        <div class="card-body">
          <a class="btn btn-primary mx-2" href="/covid">
           Thân nhiệt
          </a>
          <a class="btn btn-primary mx-2" href="/covid/injection">Tiêm Covid</a>
          <a class="btn btn-primary mx-2 disabled" href="/covid/info-covid">Tình trạng Covid</a>
        </div>
      </div>
    
      <div class="card my-3">
        <div class="card-header">
          <h4 class="text-center">Khai báo Covid</h4>
        </div>
        <div class="card-body">
          <form action="/covid/info-covid" method="POST">
      
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="covid" id="covid01" value="1">
                <label class="form-check-label" for="covid01">Dương tính</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="covid" id="covid02" value="0">
                <label class="form-check-label" for="covid02">Âm tính</label>
              </div>


            
          


           
            
            <button type="submit" class="btn btn-primary">Đăng ký</button>
          </form>
           
            
        </div>
      </div>

      <div class="card my-3">
        <div class="card-header">
          <h4 class="text-center">Chi tiết tình trạng Covid</h4>
        </div>
        <div class="card-body">
          
          <% if(infoCovids.length >0){%>
            <table class="table">
           
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Ngày</th>
                  <th scope="col">Tình trạng Covid</th>


  
                </tr>
              </thead>
              <tbody>
              
                  <% infoCovids.forEach((info,index) =>{ %>
                      <tr>
                        <th scope="row"><%= index+1 %></th>
                        <td><%= info.dateCovid %></td>
                        <td><% if(info.isCovid){%>Dương tính<% }else{%>Âm tính<% }%></td>

                      </tr>
                  <% })%>

                
              </tbody>
            </table>
          <% } else{%>
            <p>Chưa có thông tin</p>
          <% }%>
            
        </div>
      </div>

        
      
      

   

    <%- include('./includes/end.ejs') %>
