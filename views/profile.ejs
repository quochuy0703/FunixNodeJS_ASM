<%- include('./includes/head.ejs') %>
</head>
<body class="h-100">
    <%- include('./includes/navigation.ejs') %>

    <!-- Body -->

    <h1 class="text-center">Thông tin nhân viên</h1>
    <div class="container">
      
    
      <div class="card my-3">
       

        <div class="card-body">
          <div class="row py-3">
            <div class="col-md-3">
            <img src="<%= user.imageUrl%>"  class="img-fluid rounded h-100" alt="profile"/>
          </div>
          <div class="col-md-9">
            <form>
              <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">ID</label>
                <div class="col-sm-10">
                  <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="<%= user._id%>">
                </div>
              </div>
              <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Họ và tên</label>
                <div class="col-sm-10">
                  <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="<%= user.fullname%>">
                </div>
              </div>

              <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Ngày sinh</label>
                <div class="col-sm-10">
                  <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="<%= user.doB%>">
                </div>
              </div>

              <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Hệ số lương</label>
                <div class="col-sm-10">
                  <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="<%= user.salaryScale%>">
                </div>
              </div>

              <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Ngày vào làm</label>
                <div class="col-sm-10">
                  <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="<%= user.startDate%>">
                </div>
              </div>

              <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Phòng ban</label>
                <div class="col-sm-10">
                  <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="<%= user.department%>">
                </div>
              </div>

              <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Nghỉ phép còn lại</label>
                <div class="col-sm-10">
                  <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="<%= user.annualLeave%>">
                </div>
              </div>

              <div class="form-group row">
                <label for="inputPassword" class="col-sm-2 col-form-label">Hình ảnh</label>
                <% if(edit) { %>
                <div class="col-sm-10">
                  <input type="text"  class="form-control" id="inputPassword" placeholder="địa chỉ image">
                </div>
                <% } else{ %>
                  <div class="col-sm-10">
                    <input type="text" disabled  class="form-control-plaintext" id="inputPassword" placeholder="<%= user.imageUrl%>">
                  </div>
                <% } %>
              </div>
            </form>
           

            
          </div>
        </div>
        <a class="btn btn-primary" href="/profile/edit">Chỉnh sửa</a>
          
        </div>


        <div class="card my-3">
         
              
        </div>
      
      

   

    <%- include('./includes/end.ejs') %>
