<%- include('./includes/head.ejs') %>
</head>
<body class="h-100">
    <%- include('./includes/navigation.ejs') %>

    <!-- Body -->

    <section class="vh-100" style="background-color: #508bfc;">
      
      <div class="container py-5 h-100">
        <% if(errorMessage){%>
        <div class="row d-flex justify-content-center align-items-center">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5 ">
            <div class="m-auto text-center bg-info w-75 p-2" style="border-radius: 0.5rem; ">
              <span ><%= errorMessage%></span>
            </div>
            
          </div>
        </div>
        <% }%>
        <div class="row d-flex justify-content-center align-items-center h-100">
          
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
              <form class="card-body p-5" action="/login" method="POST">
    
                <h3 class="mb-5">Đăng nhập</h3>
    
                <div class="mb-3">
                  <label for="email">Địa chỉ email</label>
                  <input type="text" class="form-control" name="email" id="email" value="<%= oldInput.email%>" >
                </div>
                <div class=" mb-3">
                  <label for="password">Mật khẩu</label>
                  <input type="password" class="form-control" name="password" id="password" value="<%= oldInput.password%>">
                </div>
    
                <!-- Checkbox -->
                <!-- <div class="form-check d-flex justify-content-start mb-4">
                  <input class="form-check-input" type="checkbox" value="" id="form1Example3" />
                  <label class="form-check-label" for="form1Example3"> Remember password </label>
                </div> -->

                
    
                <button class="btn btn-primary btn-lg btn-block" type="submit">Đăng nhập</button>
    
           
    
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <%- include('./includes/end.ejs') %>
