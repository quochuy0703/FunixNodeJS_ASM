<%- include('./includes/head.ejs') %>
</head>
<body class="h-100">
    <%- include('./includes/navigation.ejs') %>

    <!-- Body -->

    <h1 class="text-center">Quá trình làm việc</h1>
    <div class="container">
      <div class="card my-3">
        <div class="card-header">
          Lựa chọn các chức năng sau:
        </div>

        <div class="card-body">
          <div class="row">

            <div class="col-md-8 col-sm-12">
              <form class="form-row form-inline" action="/work-hour/search" method="POST">
                <div class="form-group col-md-4 col-sm-4 col-xs-12">
                  <input type="text" class="form-control" name="searchText" placeholder="search">
                </div>
                  <div class="form-group col-md-4 col-sm-4 col-xs-12">
                   
                    <select name="searchChoose" class="form-control">
                      <option selected>Choose...</option>
                      <option value="1">Ngày làm việc</option>
                      
                    </select>
                  </div>
                  
         
                
                <button type="submit" class="col-md-2 col-sm-4 col-xs-12 btn btn-primary">Tìm kiếm</button>
              </form>
              <p>Hướng dẫn: </p>
              <p>Tìm kiếm theo ngày làm việc:  </p>

              <p>để tìm kiếm theo ngày thì đánh cú pháp: dXX (VD: d07 - tìm ngày 07) </p>
              <p>để tìm kiếm theo tháng thì đánh cú pháp: mXX (VD: m07 - tìm tháng 07) </p>
              <p>để tìm kiếm theo năm thì đánh cú pháp: yXXXX (VD: y2022 - tìm năm 2022) </p>
              <p>để tìm kiếm theo ngày thì đánh cú pháp: xx-xx-xxxx (VD: 17-07-2022 - tìm ngày 17-07-2022) </p>
            </div>
              
            
            
          </div>
          
          </div>
          
      </div>
    
      <div class="card my-3">
        <div class="card-header">
          <h4 class="text-center">Phiên làm việc</h4>
        </div>
        <div class="card-body">
          <% if(workedHours !== null){%>
          <table class="table">
           
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Bắt đầu</th>
                <th scope="col">Kết thúc</th>
                <th scope="col">Thời gian</th>
                <th scope="col">Nơi làm việc</th>

              </tr>
            </thead>
            <tbody>
              <% workedHours.forEach(workedHour=>{%>
                <tr>
                  <th colspan="5" class="text-center"><%= workedHour.workDate%></th>
                </tr>
                <% workedHour.sessionWorks.forEach((sessionWork,index) =>{ %>
                    <tr>
                      <th scope="row"><%= index+1 %></th>
                      <td><%= sessionWork.startHour%></td>
                      <td><%= sessionWork.endHour %></td>
                      <td><%= sessionWork.hourdiff %></td>
                      <td><%= sessionWork.workPlace%></td>
                    </tr>
                <% })%>
                <tr>
                  <th colspan="2" rowspan="3" class="text-center">Tổng cộng</th>
                  <th>Tổng giờ</th>
                  <td ><%= workedHour.workHours1%></td>

                </tr>
                <tr>
                  <th>Tổng thêm giờ</th>
                  <td ><%= workedHour.overTime%></td>

                </tr>
               
              <% })%>
              
            </tbody>
          </table>
          <% }else{%>
            <p>Chưa có dữ liệu</p>
          <% }%>
        </div>
      
      

   

    <%- include('./includes/end.ejs') %>
